<div class="flex flex-col items-center">
  <h1 class="m-4 text-2xl font-bold text-yellow-900"><%= dgettext("users", "Forgot your password?") %></h1>


  <%= form_for :user, Routes.user_reset_password_path(@conn, :create), [class: "flex flex-col items-center w-full"], fn f -> %>
    <div class="flex flex-col mb-2 w-1/3">
      <%= label f, :email, dgettext("users", "Email") %>
      <%= email_input f, :email, required: true, class: "focus:border-yellow-800 focus:outline-none focus:ring-0" %>
    </div>

    <div>
      <%= submit dgettext("users", "Send instructions to reset password"),
          class: "self-end inline-flex py-2 px-4 mb-4 mt-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-yellow-800 hover:bg-orange-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-800" %>
    </div>
  <% end %>

  <p>
    <%= link dgettext("users", "Register"), to: Routes.user_registration_path(@conn, :new) %> |
    <%= link dgettext("users", "Log in"), to: Routes.user_session_path(@conn, :new) %>
  </p>
</div>
